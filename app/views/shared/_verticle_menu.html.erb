 <nav class="nav flex-column bg-white shadow-sm rounded p-2">
  <%= link_to profiles_path, class:"nav-link px-4 rounded-pill" do %>
      <i class="fas fa-chart-line"></i>
      Dashboard
  <% end %>
  <%= link_to conversations_path, class:"nav-link px-4 rounded-pill" do %>
      <i class="fas fa-envelope"></i>
      Messages
      <span class="badge badge-primary  rounded-pill ml-2">17</span>
  <% end %>
  <% if current_user.employer %>
    <%= link_to jobs_path, class:"nav-link px-4 rounded-pill" do %>
      <i class="fas fa-line-chart mr-2"></i>
      Jobs
      <span class="badge badge-primary px-2 rounded-pill ml-2"><%= current_user.jobs.count%></span>
    <% end %>
     <%= link_to new_job_path, class:"nav-link px-4 rounded-pill" do %>
      <i class="fas fa-line-chart mr-2"></i>
      New job
    <% end %>
  <% end %>
  <% if current_user.developer %>
      <a href="#" class="nav-link px-4 rounded-pill">
        <i class="fas fa-pie-chart mr-2"></i>
        Applied Jobs
      </a>
      <% if current_user.profile.present?%>
        <%= link_to profile_path(current_user.profile), class:"nav-link px-4 rounded-pill" do %>
          <i class="fas fa-user"></i>
          View Profile
        <% end %>
        <%= link_to edit_profile_path(current_user.profile), class:"nav-link px-4 rounded-pill" do %>
          <i class="fas fa-user-edit"></i>
          Edit Profile
        <% end %>
      <% end %>
  <% end %>
  <%= link_to edit_user_registration_path, class:"nav-link px-4 rounded-pill" do %>
      <i class="fas fa-edit"></i>
      Edit Account
  <% end %>
</nav>