<div class="mt-5">
  <% if current_user.developer || current_user.employer %>
    <div class="rounded">
      <div class="row">
        <div class="col-lg-2 mb-4 mb-lg-0">
          <!-- Vertical Menu-->
           <%= render "shared/verticle_menu"%>
          <!-- End -->
        </div>
        <% if current_user.developer && current_user.employer %>
          <div class="col-lg-10 mb-5">
            <%= render 'employer' %>
          </div>
          <div class="container">
            <%= render 'developer' %> 
          </div>
        <% else   %>
          <% if current_user.developer && !current_user.employer %>
            <div class="col-lg-10 mb-5">
              <%= render 'developer' %>           
            </div>
          <% else  %>    
            <div class="col-lg-10 mb-5">
              <%= render 'employer' %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
  Please select either developer or employer to use this site
  <%= link_to 'Edit Account', edit_user_registration_path, class: "btn btn-default" %>
  <% end %>
</div>
