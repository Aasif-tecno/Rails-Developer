
<div class="mt-5">
  <div class="d-flex justify-content-between mb-3">
    <%= link_to 'Back to all jobs', root_path, class: "btn btn-default" %>
    <% if author_of(@job) || admin?%>
    <%= link_to 'Edit', edit_job_path(@job), class: "btn btn-warning" %>
    <% end %>
  </div>
    <div class="row">
      <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
        <div class="card card-profile shadow">
          <div class="row justify-content-center">
            <div class="col-lg-3 order-lg-2">
              <div class="card-profile-image mt-5">
                <% if @job.company_logo.attached?%>
                  <%= image_tag @job.company_logo, class: "rounded-circle" %>
                <% else %>
                  <%= image_tag "company-img", class: "rounded-circle" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
            <div class="d-flex justify-content-between">
              <a href="#" class="btn btn-sm btn-info mr-4">Connect</a>
              <a href="#" class="btn btn-sm btn-default float-right">Message</a>
            </div>
          </div>
          <div class="card-body pt-0 pt-md-4">
            <div class="text-center">
              <h3>
                <%= @job.company_name %><span class="font-weight-light"></span>
              </h3>
              <div class="h5 font-weight-300">
                <i class="ni location_pin mr-2"></i><%= @job.headquarters %>
              </div>
              <div class="h5">
                <i class="ni business_briefcase-24 mr-2"></i><%= @job.company_description %>
              </div>
              <div>
                <i class="ni education_hat mr-2"></i><%= @job.company_website %>
              </div>
                <%= link_to "Apply for this role", @job.link_to_apply, class: "btn btn-primary"%>
              <%# <hr class="my-4">
              <p>Ryan — the name taken by Melbourne-raised, Brooklyn-based Nick Murphy — writes, performs and records all of his own music.</p>
              <a href="#">Show more</a> %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-8 order-xl-1">
        <div class="card bg-white shadow rounded overflow-hidden">
          <div class="card-header bg-light border-0">
            <div class="row align-items-center">
              <div class="col-8">
                <h3 class="mb-0"><%= @job.title %></h3>
              </div>
              <div class="col-4 text-right">
                <a href="#!" class="btn btn-sm btn-primary">Settings</a>
              </div>
            </div>
          </div>
          <div class="card-body">
            <div class="px-4 py-3">
              <h4 class="mb-0">About the role</h4>
              <div class="p-2 rounded shadow-sm bg-light">
                <p class=" mb-0"><%= @job.description %></p>
              </div>
            </div>
           
            <div class="px-4 py-3">
              <h4 class="mb-0">COMPENSATION TYPE</h4>
              <div class="p-2 rounded shadow-sm bg-light">
                <p class=" mb-0"><%= @job.compensation_type %> </p>
              </div>
            </div>
            
            <div class="px-4 py-3">
              <h4 class="mb-0">COMPENSATION RANGE</h4>
              <div class="p-2 rounded shadow-sm bg-light">
                <p class=" mb-0"><%= number_to_currency(@job.compensation_range) %></p>
              </div>
            </div>
            
            <div class="px-4 py-3">
              <h4 class="mb-0">EXPERIENCE</h4>
              <div class="p-2 rounded shadow-sm bg-light">
                <p class=" mb-0"><%= pluralize(@job.years_of_experience, "year") %> of experience</p>
              </div>
            </div>
           
            <div class="px-4 py-3">
              <h4 class="mb-0">HOURLY RANGE</h4>
              <div class="p-2 rounded shadow-sm bg-light">
                <p class=" mb-0"><%= @job.estimated_hours %></p>
              </div>
            </div>
            
            <div class="px-4 py-3">
              <h4 class="mb-0">REMOTE</h4>
              <div class="p-2 rounded shadow-sm bg-light">
                <p class=" mb-0"> <%= @job.remote %></p>
              </div>
            </div>
            
          </div>
        </div>
      </div>
  </div>
</div>
